{
    "license": "GPL-3.0",
    "name": "@chango/ui",
    "version": "0.0.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/phlax/chango.ui"
    },
    "scripts": {
        "start": "npm run build -- -w",
        "build": "cross-env NODE_ENV=production babel . -d lib --ignore babel.config.js --ignore tests --ignore .git --ignore node_modules --ignore lib --ignore coverage",
        "test": "jest --coverage",
        "lint": "eslint . --ignore-pattern '**/lib/**/*.js'"
    },
    "jest": {
        "verbose": true,
        "testMatch": [
            "**/tests/**/*.js"
        ],
        "setupFilesAfterEnv": [
            "jest-enzyme"
        ],
        "testEnvironment": "enzyme",
        "testEnvironmentOptions": {
            "enzymeAdapter": "react16"
        },
        "collectCoverageFrom": [
            "**/*.{js,jsx,ts,tsx}",
            "!**/babel.config.js",
            "!**/lib/**/*",
            "!**/coverage/**/*",
            "**/tests/**/*.{js,jsx,ts,tsx}",
            "!src/**/*.d.ts"
        ],
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "coverageReporters": [
            "text",
            "text-summary",
            "lcov"
        ],
        "forceCoverageMatch": [
            "**/tests/**/*.{js,jsx,ts,tsx}"
        ],
        "moduleNameMapper": {
            "@chango/ui(.*)": "<rootDir>$1"
        },
        "moduleDirectories": [
            "node_modules",
            ".",
            "!**/lib/**/*"
        ],
        "transform": {
            "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
            "^.+\\.module\\.(css|sass|scss)$"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx",
            "css"
        ]
    },
    "files": [
        "lib/**/*"
    ],
    "main": "lib/index.js",
    "peerDependencies": {
        "@phlax/react-checkbox-table": "^0.0.1",
        "@chango/core": "^0.0.4",
        "@tanem/react-nprogress": "^3.0.18",
        "react": "^16.13.0",
        "react-avatar": "^3.9.2",
        "react-dom": "^16.13.0",
        "react-intl": "^3.12.1",
        "react-router-dom": "^5.1.2",
        "reactstrap": "^8.4.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "^7.9.0",
        "@babel/preset-react": "^7.9.4",
        "@chango/core": "^0.0.4",
        "@phlax/react-checkbox-table": "^0.0.1",
        "@tanem/react-nprogress": "^3.0.18",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^25.2.4",
        "babel-plugin-rewire": "^1.2.0",
        "codecov": "^3.7.1",
        "cross-env": "^7.0.2",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "eslint": "^6.8.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-react": "^7.13.0",
        "history": "^4.10.1",
        "jest": "^25.2.4",
        "jest-environment-enzyme": "^7.1.2",
        "jest-enzyme": "^7.1.2",
        "js-cookie": "^2.2.1",
        "prop-types-exact": "^1.2.0",
        "react": "^16.13.0",
        "react-avatar": "^3.9.2",
        "react-dom": "^16.13.0",
        "react-intl": "^3.12.1",
        "react-router-dom": "^5.1.2",
        "react-table": "^7.0.4",
        "reactstrap": "^8.4.1",
        "redux": "^4.0.5"
    }
}
